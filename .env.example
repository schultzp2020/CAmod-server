# Combined Arms Dedicated Server Configuration
# Copy this file to .env and modify as needed
#
# Usage:
#   cp .env.example .env
#   # Edit .env with your settings
#   podman compose up -d --build

# =============================================================================
# Build Configuration
# =============================================================================
# GitHub repository to build from (default: Inq8/CAmod)
# For dev/test builds, try: darkademic/CAmod
CA_REPO=Inq8/CAmod

# Git tag or branch to build from (see repo tags)
CA_VERSION=1.08

# =============================================================================
# Server Identity
# =============================================================================
# Server name shown in the lobby browser
Name=Combined Arms Server

# Port to listen on (both TCP and UDP)
ListenPort=1234

# =============================================================================
# Online Settings
# =============================================================================
# Advertise server to the master server list
AdvertiseOnline=True

# Server password (leave empty for no password)
Password=

# =============================================================================
# Gameplay Settings
# =============================================================================
# Allow singleplayer mode
EnableSingleplayer=False

# Query the map repository for missing maps
QueryMapRepository=True

# Default map (leave empty for random)
Map=

# =============================================================================
# Security Settings
# =============================================================================
# Require players to authenticate with OpenRA account
RequireAuthentication=False

# Comma-separated list of blocked profile IDs
ProfileIDBlacklist=

# Comma-separated list of allowed profile IDs (leave empty to allow all)
ProfileIDWhitelist=

# =============================================================================
# Logging and Diagnostics
# =============================================================================
# Record replays of games
RecordReplays=False

# Enable sync reports for debugging
EnableSyncReports=False

# Enable GeoIP for player location
EnableGeoIP=True

# Share anonymized IP data
ShareAnonymizedIPs=True

# =============================================================================
# Rate Limiting
# =============================================================================
# Cooldown between join attempts (milliseconds)
FloodLimitJoinCooldown=5000

# =============================================================================
# Advanced
# =============================================================================
# Custom support directory (leave empty for default)
SupportDir=
